{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "[%(asctime)s] %(levelname)s %(name)s %(message)s"
        },
        "console": {
            "format": "[%(asctime)s] %(levelname)s %(name)s %(message)s",
            "datefmt": "%H:%M:%S"
        }
    },
    "filters": {
        "log_only_n_times": {
            "()": "floodsegment.utils.logutils.N_TimesOnlyFilter"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "WARNING",
            "formatter": "console",
            "filters": [
                "log_only_n_times"
            ],
            "stream": "ext://sys.stdout"
        },
        "debug_file_handler": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "DEBUG",
            "formatter": "simple",
            "filename": "debug.log",
            "maxBytes": 10485760,
            "backupCount": 20,
            "filters": [
                "log_only_n_times"
            ],
            "encoding": "utf8"
        },
        "info_file_handler": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "INFO",
            "formatter": "simple",
            "filename": "info.log",
            "maxBytes": 10485760,
            "backupCount": 20,
            "filters": [
                "log_only_n_times"
            ],
            "encoding": "utf8"
        },
        "error_file_handler": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "ERROR",
            "formatter": "simple",
            "filename": "errors.log",
            "maxBytes": 10485760,
            "backupCount": 20,
            "filters": [
                "log_only_n_times"
            ],
            "encoding": "utf8"
        }
    },
    "root": {
        "level": "WARNING",
        "handlers": [
            "console",
            "info_file_handler",
            "error_file_handler",
            "debug_file_handler"
        ]
    }
}